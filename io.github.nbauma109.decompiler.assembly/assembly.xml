<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0
                              http://maven.apache.org/xsd/assembly-2.1.0.xsd">

  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>

    <!-- Site and metadata files -->
    <fileSet>
      <directory>..</directory>
      <filtered>true</filtered>
      <includes>
        <include>site.xml</include>
      </includes>
    </fileSet>

    <!-- Documentation and licenses -->
    <fileSet>
      <directory>..</directory>
      <filtered>false</filtered>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>AUDIT*</include>
      </includes>
    </fileSet>

  </fileSets>

  <!-- === Feature Modules === -->
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.github.nbauma109.features:io.github.nbauma109.decompiler</include>
        <include>io.github.nbauma109.features:io.github.nbauma109.decompiler.source</include>
      </includes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <dependencySets>
          <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
          </dependencySet>
        </dependencySets>
        <outputFileNameMapping>${module.artifactId}_${module.version}${dashClassifier?}.${module.extension}</outputFileNameMapping>
        <outputDirectory>features</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>

    <!-- === Plugin Modules === -->
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.github.nbauma109:io.github.nbauma109.decompiler</include>
        <include>io.github.nbauma109:io.github.nbauma109.decompiler.source.attach</include>
      </includes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <dependencySets>
          <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
          </dependencySet>
        </dependencySets>
        <outputFileNameMapping>${module.artifactId}_${module.version}${dashClassifier?}.${module.extension}</outputFileNameMapping>
        <outputDirectory>plugins</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
